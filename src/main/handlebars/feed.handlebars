{{#> layout}}
  {{#*inline "title"}}Seite {{page}}{{/inline}}
  {{#*inline "meta"}}
    <meta property="og:url" content="{{request.uri}}">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Seite {{page}} - Dialog">
    <meta property="og:description" content="Fotoblog von Timm Friebe">
    {{#with elements.0}}
      {{#with images.0}}
        <meta property="og:image" content="{{request.uri.base}}/image/{{slug}}/preview-{{.}}.jpg">
      {{/with}}
    {{/with}}
  {{/inline}}
  {{#*inline "main"}}
    <h1 class="title">Dialog - Seite {{page}}</h1>

    <div class="pagination">
      <a class="previous" {{#if previous}}href="/feed?page={{previous}}"{{else}}disabled{{/if}}>Neuere</a>
      <a class="next" {{#if next}}href="/feed?page={{next}}"{{else}}disabled{{/if}}>Ältere</a>
    </div>

    {{#with elements}}
      {{#each .}}
        <section>
          <h2>
            {{#if is.journey}}
              <a href="/journey/{{slug}}">{{title}}</a>
            {{else if is.content}}
              <a href="/content/{{slug}}">{{title}}</a>
            {{else}}
              {{title}}
            {{/if}}
          </h2>

          <div class="meta">
            {{date ./date format="d.m.Y"}} @
            <ul class="locations" role="list">
              {{#each locations}}
                <li><a title="@{{lat}},{{lon}}" href="{{link}}">{{name}}</a></li>
              {{/each}}
            </ul>
          </div>

          {{> partials/images in=. first=@first}}

          <div class="content">
            {{& content}}
          </div>
        </section>
      {{/each}}
    {{else}}
      <section class="empty">
        <h2>Noch keine Inhalte</h2>
        <p>(Coming soon)</p>
      </section>
    {{/with}}

    <div class="pagination">
      <a class="previous" {{#if previous}}href="/feed?page={{previous}}"{{else}}disabled{{/if}}>Neuere</a>
      <a class="next" {{#if next}}href="/feed?page={{next}}"{{else}}disabled{{/if}}>Ältere</a>
    </div>
  {{/inline}}
  {{#*inline "scripts"}}
  {{/inline}}
{{/layout}}